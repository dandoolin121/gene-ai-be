<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.0.xsd">

    <changeSet id="001-create-persons-table" author="damian">
        <createTable tableName="persons">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="uuid" type="UUID">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="first_name" type="VARCHAR(255)"/>
            <column name="last_name" type="VARCHAR(255)"/>
            <column name="birth_date" type="DATE"/>
            <column name="residence" type="VARCHAR(255)"/>
            <column name="death_date" type="DATE"/>
            <column name="burial_place" type="VARCHAR(255)"/>
        </createTable>
    </changeSet>

    <changeSet id="002-create-marriages-table" author="damian">
        <createTable tableName="marriages">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="uuid" type="UUID">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="marriage_date" type="DATE"/>
            <column name="divorce_date" type="DATE"/>
            <column name="marriage_place" type="VARCHAR(255)"/>
        </createTable>
    </changeSet>

    <changeSet id="003-create-person-parents-table" author="damian">
        <createTable tableName="person_parents">
            <column name="child_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="parent_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
        </createTable>
        <addPrimaryKey tableName="person_parents" columnNames="child_id, parent_id"/>
        <addForeignKeyConstraint baseTableName="person_parents" baseColumnNames="child_id"
                                 constraintName="fk_person_parents_child"
                                 referencedTableName="persons" referencedColumnNames="id"/>
        <addForeignKeyConstraint baseTableName="person_parents" baseColumnNames="parent_id"
                                 constraintName="fk_person_parents_parent"
                                 referencedTableName="persons" referencedColumnNames="id"/>
    </changeSet>

    <changeSet id="004-create-person-marriages-table" author="damian">
        <createTable tableName="person_marriages">
            <column name="marriage_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="person_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
        </createTable>
        <addPrimaryKey tableName="person_marriages" columnNames="marriage_id, person_id"/>
        <addForeignKeyConstraint baseTableName="person_marriages" baseColumnNames="marriage_id"
                                 constraintName="fk_person_marriages_marriage"
                                 referencedTableName="marriages" referencedColumnNames="id"/>
        <addForeignKeyConstraint baseTableName="person_marriages" baseColumnNames="person_id"
                                 constraintName="fk_person_marriages_person"
                                 referencedTableName="persons" referencedColumnNames="id"/>
    </changeSet>

</databaseChangeLog>
